{
    "name": "angular",
    "version": "0.0.1",
    "license": "ISC",
    "scripts": {
        "build": "npm run build-resources && npm run build-client && npm run build-server && npm run build-serverbundle",
        "build-resources": "mkdirp ../resources",
        "build-client": "ng build --app 0 --prod --build-optimizer --output-path ../resources/public -prod",
        "build-server": "ng build --app 1 --prod --output-hashing none",
        "build-serverbundle": "webpack && ncp dist-serverbundle/server.bundle.js ../resources/server.bundle.js"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^4.3.5",
        "@angular/common": "^4.3.5",
        "@angular/compiler": "^4.3.5",
        "@angular/core": "^4.3.5",
        "@angular/forms": "^4.3.5",
        "@angular/http": "^4.3.5",
        "@angular/platform-browser": "^4.3.5",
        "@angular/platform-browser-dynamic": "^4.3.5",
        "@angular/platform-server": "^4.3.5",
        "@angular/router": "^4.3.5",
        "bootstrap": "^4.0.0-beta",
        "core-js": "^2.5.0",
        "express": "^4.15.4",
        "jquery": "^3.2.1",
        "popper.js": "^1.12.3",
        "rxjs": "^5.4.3",
        "zone.js": "^0.8.16"
    },
    "devDependencies": {
        "@angular/cli": "1.3.0",
        "@angular/compiler-cli": "^4.3.5",
        "mkdirp": "^0.5.1",
        "ncp": "^2.0.0",
        "typescript": "~2.4.2",
        "webpack": "^3.5.4"
    }
}
